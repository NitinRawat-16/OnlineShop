@model UserInterface.ViewModel.ProductViewModel
@{
    ViewBag.Title = "AddProductQuantity";
}
<link href="~/Content/ProductSheet.css" rel="stylesheet" />
<h2>Add Product Quantity</h2>
@using (Html.BeginForm("SaveProductQuantity", "Products", FormMethod.Post, new { enctype = "multipart/form-data" }))
{

        <div class="form-group ">
            <label class="label-class">Product Id</label>
            @Html.TextBoxFor(m => m.product.ProductId, new { @class = "form-control" , @readonly= true})
            <p class="error">  @Html.ValidationMessageFor(m => m.product.ProductId)</p>
        </div>
        <div class="form-group ">
            <label class="label-class">Product Name</label>
            @Html.TextBoxFor(m => m.product.ProductName, new { @class = "form-control" , @readonly= true})
            <p class="error">@Html.ValidationMessageFor(m => m.product.ProductName)</p>
        </div>

        <label>Size Wise Quantity :</label>
            <div class="form-group ">
                @Html.LabelFor(m => m.productSize.S)
                @Html.TextBoxFor(m => m.productSize.S, new { @class = "form-control" })
                <p class="error">  @Html.ValidationMessageFor(m => m.productSize.S)</p>
            </div>
            <div class="form-group ">
                @Html.LabelFor(m => m.productSize.M)
                @Html.TextBoxFor(m => m.productSize.M, new { @class = "form-control" })
                <p class="error">  @Html.ValidationMessageFor(m => m.productSize.M)</p>
            </div>
   
                   <div class="form-group ">
                @Html.LabelFor(m => m.productSize.L)
                @Html.TextBoxFor(m => m.productSize.L, new { @class = "form-control" })
                <p class="error">  @Html.ValidationMessageFor(m => m.productSize.L)</p>
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.productSize.Xl)
                @Html.TextBoxFor(m => m.productSize.Xl, new { @class = "form-control" })
                <p class="error">  @Html.ValidationMessageFor(m => m.productSize.Xl)</p>
            </div>
            @Html.HiddenFor(m => m.product.ProductSizeId)
        <div>
            <input type="submit" value="Submit" class="btn btn-primary" />
        </div>

}
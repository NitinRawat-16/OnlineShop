@model UserInterface.ViewModel.ProductViewModel
@{
    ViewBag.Title = "EditProduct";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link href="~/Content/ProductSheet.css" rel="stylesheet" />


@using (Html.BeginForm("SaveOrEdit", "Products", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <div class="containerbox">
        <h2 id="h2">Edit Product</h2>
        <div class="Box col-md-12">
            <div class="form-group  col-md-6">
                <label class="label-class">Product Name</label>
                @Html.TextBoxFor(m => m.product.ProductName, new { @class = "form-control" })
                <p class="error">@Html.ValidationMessageFor(m => m.product.ProductName)</p>
            </div>

            <div class="form-group col-md-6" id="second-item">
                <label class="label-class">Product Price</label>
                @Html.TextBoxFor(m => m.product.ProductPrice, new { @class = "form-control" })
                <p class="error">  @Html.ValidationMessageFor(m => m.product.ProductPrice)</p>
            </div>
        </div>

        <div class="Box col-md-12">
            <div class="form-group col-md-6">
                <label class="label-class">Product Description</label>
                @Html.TextBoxFor(m => m.product.ProductDescription, new { @class = "form-control" })

            </div>

            <div class="form-group col-md-6" id="second-item">
                <label class="label-class"> Product Category</label>
                @Html.DropDownListFor(m => m.product.ProductCategoryId, new SelectList(Model.productCategories, "ProductCategoryId", "ProductCategoryType"), "Select Product Type", new { @class = "form-control" })
                <p class="error">  @Html.ValidationMessageFor(m => m.product.ProductCategoryId)</p>
            </div>
        </div>
        <div class="Box col-md-12">
            <label>Add Size Wise Quantity :</label>
            <div id="size">
                <div class="form-group sub-size">
                    @Html.LabelFor(m => m.productSize.S)
                    @Html.TextBoxFor(m => m.productSize.S, new { @class = "form-control" })
                    <p class="error">  @Html.ValidationMessageFor(m => m.productSize.S)</p>
                </div>
                <div class="form-group sub-size">
                    @Html.LabelFor(m => m.productSize.M)
                    @Html.TextBoxFor(m => m.productSize.M, new { @class = "form-control" })
                    <p class="error">  @Html.ValidationMessageFor(m => m.productSize.M)</p>
                </div>
                <div class="form-group sub-size">
                    @Html.LabelFor(m => m.productSize.L)
                    @Html.TextBoxFor(m => m.productSize.L, new { @class = "form-control" })
                    <p class="error">  @Html.ValidationMessageFor(m => m.productSize.L)</p>
                </div>

                <div class="form-group sub-size">
                    @Html.LabelFor(m => m.productSize.Xl)
                    @Html.TextBoxFor(m => m.productSize.Xl, new { @class = "form-control" })
                    <p class="error">  @Html.ValidationMessageFor(m => m.productSize.Xl)</p>
                </div>
            </div>
        </div>
        <div class="form-group col-md-12">
            <div class="col-md-6">
                <label class="label-class">Notify When(Quantity)</label>
                @Html.TextBoxFor(m => m.product.ProductAdminNotification, new { @class = "form-control" })
                <p class="error"> @Html.ValidationMessageFor(m => m.product.ProductAdminNotification)</p>
            </div>

            <div class="col-md-6">
                <label class="label-class">Select Picture of Your Product</label>
                @Html.TextBoxFor(m => m.imageUrl, new { type = "file" })

            </div>
        </div>

        @Html.HiddenFor(m => m.product.ProductId)
        @Html.HiddenFor(m => m.product.ProductSizeId)
        @Html.AntiForgeryToken()
        <div class="submit-class">
            <input type="submit" class=" btn btn-primary" />
        </div>
    </div>
}




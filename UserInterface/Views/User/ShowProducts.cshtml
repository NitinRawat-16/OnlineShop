@model IEnumerable<DataModelLayer.Product>
@{
    ViewBag.Title = "ShowProducts";
    Layout = "~/Views/User/_Layout.cshtml";
}
<link href="~/Content/ProductSheet.css" rel="stylesheet" />
<h2>ShowProducts</h2>

<hr />

@foreach (var items in Model)
{
    <div id ="products" class="box">

        <div class="col-md-3 thumbnail display">
            <img src="@Url.Content(items.ProductImage)" alt="Waterfall" />

            <div id="item">
                <div class="caption Name">
                    <h4> <span class="caption Name"> @items.ProductName </span></h4>
                </div>

                <div class="caption">
                    <span>@items.ProductDescription </span>
                </div>
                <div class="caption">
                    <span class="btn-danger">Rs. @items.ProductPrice/-</span>
                </div>
            </div>
            <div>
                <a href="@Url.Action("BuyNow", "User", items)" class="btn btn-lg btn-block btn-warning button">Buy Now</a>
                <a class="btn btn-lg btn-block button btn-orange">Add To Cart </a>
                <a href="@Url.Action("AddToWishlist", "User", items)" class="btn btn-lg btn-block button btn-warning">Wishlist</a>
            </div>
        </div>
    </div>
}

